.scroll-view{
  width: 100%;
  height: 80rpx;
  white-space: nowrap;
  background: #fff;
  padding: 0 24rpx;
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  z-index: 999;
}
.scroll-view-item{
  height: 80rpx;
  display:inline-block;
  margin-right: 16rpx;
  padding: 0 30rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  position: relative;
}

.scroll-view-item.active::after{
  content: "";
  height: 2px;
  width: 80%;
  background: red;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}

