
page{
  background-color: #f8f8fa;
  padding-bottom: 70px;
}

.head_wrapper{
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 24rpx;
  background: #10c785;
}
.head_wrapper>.div{
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  align-items: center;
}
.head_wrapper>.div:nth-child(1){
  background: #fff;
  border-radius: 10rpx;
  flex: 1;
  padding-left: 65rpx;
  box-sizing: border-box;
  position: relative;
}
.head_wrapper>.div:nth-child(1) .icon{
  width: 26rpx;
  height: 28rpx;
  position: absolute;
  left: 25rpx;
}
.head_wrapper>.div:nth-child(1) .input{
  width: 96%;
  font-size: 28rpx;
}
.head_wrapper>.div:last-child{
  margin-left: 24rpx;
}
.head_wrapper>.div:last-child .icon{
  width: 46rpx;
  height: 46rpx;
}


.shopbox{
  padding: 0 24rpx 20rpx;
  background: #10c785;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
  min-height: 204rpx;
  padding-left: 220rpx;
}
.shopbox .lt{
  width: 180rpx;
  height: 180rpx;
  border: 1px solid #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: absolute;
  left: 24rpx;
  box-sizing: border-box;
}
.shopbox .lt .img{
  width: 100%;height: 100%;
}
.shopbox .lt .active{
  position: absolute;
  top: 0;
  left: 0;
  font-size: 26rpx;
  background: #fe4a00;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.shopbox .rt{
  color: #fff;
  font-size: 26rpx;
  line-height: 1.5;
}
.shopbox .rt .name{
  font-size: 32rpx;
  margin-bottom: 15rpx;
}
.shopbox .rt .goods{
  margin-top: 10rpx;
}
.shopbox .rt .goods .lab{
  font-size: 24rpx;
  background: #fe4a00;
  padding:6rpx 10rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  border-radius: 6rpx;
}
.shopbox .rt .distance{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.shopbox .rt .distance .Navigation{
  font-size: 26rpx;
  border: 1px solid #fff;
  display: inline-block;
  line-height: 40rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
}
.shopbox .rt .icon{
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}

.nav{
  padding: 0;
  position: relative;
}
.nav .ul{
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.nav .ul .li{
  flex: 1;
  text-align: center;
  border-right: 1px solid #efeff1;
  box-sizing: border-box;
  padding:20rpx 0;
}
.nav .ul .li:last-child{
  border: none;
}
.nav .ul .li .icon{
  width: 80rpx;height: 80rpx;margin-bottom: 10rpx;
}
.nav .ul .li .name{
  font-size: 30rpx;
  color: #333;
}

.tabs{
  background: #fff;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 24rpx;
  margin-top: 24rpx;
  margin-bottom: 2px;
}
.tabs .item{
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
  position: relative;
}
.tabs .item.active::after{
  content: "";
  width: 128rpx;
  height: 2px;
  background: #10c785;
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
}
.tabs .item.active{
  color: #333;
  font-weight: bold;
}

.scroll-view{
  height: 240rpx;
  white-space: nowrap;
  padding: 10rpx 0;
}
.scroll-view .img,
.scroll-view-item{
  width: 240rpx;
  height: 240rpx;
  display:inline-block;
  border-radius: 10rpx;
}
.scroll-view-item{
  margin-right: 16rpx;
}
.scroll-view-item:last-child{
  margin-right: 0;
}


.list-group .list-item{
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
  position: relative;
  padding-left: 80rpx;
}
.list-group .list-item .lt{
  font-size: 28rpx;
  color: #333;
}
.list-group .list-item .icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
}
.list-group .list-item .move{
  width: 19rpx;
  height: 28rpx;
}
.list-group .list-item::after{
  content: "";
  bottom: 0;
  height: 1px;
  background: #f3f3f3;
  position: absolute;
  left: 80rpx;
  right: 0;
}
.list-group .list-item:last-child::after{
  display: none;
}
.list-group .list-item:first-child{
  border-top: 1px solid #f3f3f3;
}
.list-group .list-item:last-child{
  border-bottom: 1px solid #f3f3f3;
}
.list-group .list-item .rt .marker{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}